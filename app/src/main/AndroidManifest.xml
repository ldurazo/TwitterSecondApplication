<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.internship.twittersecondapplication.app" >
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.internship.twittersecondapplication.app.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.internship.twittersecondapplication.app.AndroidTabActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.internship.twittersecondapplication.app.IOSTabActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.internship.twittersecondapplication.app.MobileTabActivity"
            android:label="@string/app_name" >
        </activity>

    </application>

</manifest>
